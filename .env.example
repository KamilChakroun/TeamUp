# Example environment variables for TeamUp (development)
# Copy this file to .env and edit values as needed for local development.

# Django secret key (do NOT use this in production)
SECRET_KEY=replace-me-with-a-secret-key

# DEBUG: True for local development, False in production
DEBUG=True

# Hosts allowed (comma separated)
ALLOWED_HOSTS=localhost,127.0.0.1

# Database engine. Defaults to sqlite for local dev. To use MySQL set to django.db.backends.mysql
DB_ENGINE=django.db.backends.sqlite3
# If using sqlite, DB_NAME is the path to the DB file (relative)
DB_NAME=db.sqlite3

# If using another DB engine (MySQL/Postgres) provide these values
DB_USER=root
DB_PASSWORD=
DB_HOST=localhost
DB_PORT=3306
# SECURITY WARNING: keep the secret key used in production secret!
# Generate a new key with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=your-secret-key-here-change-this-in-production

# SECURITY WARNING: don't run with debug turned on in production!
DEBUG=True

# Database Configuration
DB_ENGINE=django.db.backends.mysql
DB_NAME=teamup_db
DB_USER=root
DB_PASSWORD=
DB_HOST=localhost
DB_PORT=3306

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1
